<body class="signup-page sidebar-collapse">
    <div class="header-filter" filter-color="purple" style="background-image: url('../../Content/img/ladamtam.jpg'); background-size: cover; background-position: top center;">
        <div class="container">
            <div class="row">
                <div class="col-md-10 ml-auto mr-auto">
                    <div class="card card-signup">
                        <h2 class="card-title text-center">Книга</h2>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-10 mr-auto ml-auto">
                                    <div class="card card-plain card-blog">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="card-header card-header-image">
                                                    <img class="img img-raised" src="~/Content/img/video/ladambook.jpg">
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                            @using (Html.BeginForm("Register", "ru"))
                                            {
                                                <h6 class="card-category text-info">Фэнтези</h6>
                                                <h3 class="card-title">
                                                    <a href="#">Ладамтам</a>
                                                </h3>
                                                <p class="card-description">
                                                    Метафорические сказки о важном и настоящем. О том, как дойти до края земли и вернуться обратно, о лентах в волосах, об одном на двоих сердце, о листопадах и лесоверстах, об изначальных именах, о заговоренном на любовь рулевом колесе и о путеводных камнях, о самом мудром дураке на свете, и много ещё о чем...
                                                </p>
                                                <p>
                                                    <div class="title card-title">
                                                        <h3>Способ доставки</h3>
                                                    </div>
                                                    <div class="form-check">
                                                        <label class="form-check-label">
                                                            @*<input class="form-check-input" type="radio" name="deliveryRadios" id="delivery2" value="option2"> Самовывоз из Москвы по указанному адресу (без дополнительной оплаты)*@
                                                            @Html.RadioButtonFor(m => m.needsdelivery, "option3", new { @checked = true, @class = "form-check-input" })Электронная книга
                                                            <span class="circle">
                                                                <span class="check"></span>
                                                            </span>
                                                        </label>
                                                    </div>
                                                    <div class="form-check">
                                                        <label class="form-check-label">
                                                            @*<input class="form-check-input" type="radio" name="deliveryRadios" id="delivery2" value="option2"> Самовывоз из Москвы по указанному адресу (без дополнительной оплаты)*@
                                                            @Html.RadioButtonFor(m => m.needsdelivery, "option2", new { @class = "form-check-input" })Самовывоз из Москвы по указанному адресу (без дополнительной оплаты)
                                                            <span class="circle">
                                                                <span class="check"></span>
                                                            </span>
                                                        </label>
                                                    </div>
                                                    <div class="form-check">
                                                        <label class="form-check-label">
                                                            @*<input class="form-check-input" type="radio" name="deliveryRadios" id="delivery1" value="option1" checked> Требуется доставка по России (+200 р.)*@
                                                            @Html.RadioButtonFor(m => m.needsdelivery, "option1", new { @class = "form-check-input" })Требуется доставка по России (+@(200 * 1.07) р.)
                                                            <span class="circle">
                                                                <span class="check"></span>
                                                            </span>
                                                        </label>
                                                    </div>
                                                </p>
                                                <p class="author">
                                                    Автор:
                                                    <a href="https://vk.com/anchekolla">
                                                        <b>Анче Колла</b>
                                                    </a>
                                                </p>
                                                <p>
                                                    @Html.HiddenFor(m => m.course, "ladambook")
                                                    @*<a id ="price" href="@Url.Action("Register", "ru", Model)" class="btn  btn-success btn-primary btn-lg">
                                                        <i class="material-icons">payment</i> @("Купить за " + ((GlobalModel.Ladamtam.Price + 200) * 1.07).ToString() + " руб.")<sup>*</sup>
                                                    </a>*@

                                                    <button type="submit" id ="price" class="btn btn-success"><i class="material-icons">payment</i> @("Купить за " + (((int)GlobalModel.Ladamtam.PriceDownloadItem) * 1.07).ToString() + " руб.")<sup>*</sup></button>
                                                </p>
                                                <sup>*</sup><span>Сумма указана с учетом комиссии при условии оплаты банковской картой.При изменении способа оплаты взимаемая комиссия может измениться.</span>
                                            }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--   Core JS Files   -->
    <script src="~/Content/js/core/jquery.min.js" type= "text/javascript" ></script>
    <script src="~/Content/js/core/popper.min.js" type= "text/javascript" ></script>
    <script src="~/Content/js/core/bootstrap-material-design.min.js" type= "text/javascript" ></script>
