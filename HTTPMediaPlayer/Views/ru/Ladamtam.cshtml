    <script>
        $(document).ready(function () {

            $('input[type=radio][name=needsdelivery]').change(function () {
                if (this.value == 'option1') {
                    $('#price').html('<i class="material-icons">payment</i> @("Купить за " + ((GlobalModel.Ladamtam.Price + 200) * 1.07).ToString() + " руб.")<sup>*</sup>');
                }
                else if (this.value == 'option2') {
                    $('#price').html('<i class="material-icons">payment</i> @("Купить за " + (GlobalModel.Ladamtam.Price * 1.07).ToString() + " руб.")<sup>*</sup>');
                }
                else if (this.value == 'option3') {
                    $('#price').html('<i class="material-icons">payment</i> @("Купить за " + (GlobalModel.Ladamtam.PriceDownloadItem * 1.07).ToString() + " руб.")<sup>*</sup>');
                }
            });
        });
    </script>
</body>


