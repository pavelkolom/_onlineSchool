@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/img/favicon.png">
    <link rel="icon" type="image/png" href="~/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        DUWAYS
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!-- Extra details for Live View on GitHub Pages -->
    <!-- Canonical SEO -->
    <link rel="canonical" href="http://duways.com" />
    <!--  Social tags      -->
    <meta name="keywords" content="">
    <meta name="description" content="">
    <!-- Schema.org markup for Google+ -->
    <meta itemprop="name" content="">
    <meta itemprop="description" content="">
    <meta itemprop="image" content="~/img/duwayslogo.png">
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <!-- CSS Files -->
    <link href="~/css/material-kit.min.css?v=2.1.0" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body class="sidebar-collapse">
    <nav class="navbar navbar-color-on-scroll navbar-transparent    fixed-top  navbar-expand-lg " color-on-scroll="100" id="sectionsNav">
        <div class="container">
            <div class="navbar-translate">
                <a class="navbar-brand" href="https://duways.com">
                                DUWAYS
                            </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li style="@(String.IsNullOrEmpty(Context.Session.GetString("LoginName")) ? "display:none" : "")" class="dropdown nav-item">
                        <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                            <i class="material-icons">person</i> @(String.IsNullOrEmpty(Context.Session.GetString("LoginName")) ? "" : Context.Session.GetString("LoginName"))
                        </a>
                        <div class="dropdown-menu dropdown-with-icons">
                            <a href="@Url.Action("Index", "Dashboard", new { name = !String.IsNullOrEmpty(Context.Session.GetString("UserUrl")) ? Context.Session.GetString("UserUrl") : ""})" class="dropdown-item">
                                <i class="material-icons">dns</i> Персональный кабинет
                            </a>
                            <a href="@Url.Action("Logout", "Account")" class="dropdown-item">
                                <i class="material-icons">forward</i> Выход
                            </a>
                        </div>
                    </li>
                    <li style="@(!String.IsNullOrEmpty(Context.Session.GetString("LoginName")) ? "display:none" : "")" class="button-container nav-item iframe-extern">
                        <a href="@Url.Action("Login", "Account")" class="btn  btn-rose btn-primary btn-block">
                            <i class="material-icons">fingerprint</i> Войти
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()

    <!--   Core JS Files   -->
    <script src="~/js/core/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/core/popper.min.js" type="text/javascript"></script>
    <script src="~/js/core/bootstrap-material-design.min.js" type="text/javascript"></script>
    <script src="~/js/material-kit.min.js?v=2.1.0" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
